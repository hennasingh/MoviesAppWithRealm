<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="RainbowBlue" parent="AppTheme">
        <item name="colorPrimary">@color/themeBluePrimary</item>
        <item name="colorPrimaryDark">@color/themeBluePrimaryDark</item>
        <item name="colorAccent">@color/themeBlueAccent</item>
        <item name="startColor">@color/startColorBlue</item>
        <item name="endColor">@color/endColorBlue</item>

    </style>

    <style name="ShroomHaze" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="startColor">@color/startColorRed</item>
        <item name="endColor">@color/endColorRed</item>

    </style>

    <style name="Text_Heading_Style">
        <item name="android:background">@drawable/text_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">@dimen/text_22sp</item>
        <item name="android:layout_marginStart">@dimen/margin_10dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_10dp</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
        <item name="android:padding">@dimen/padding_4dp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>

    </style>

    <style name="Movie_Data_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:layout_marginTop">@dimen/margin_4dp</item>
        <item name="android:drawablePadding">@dimen/padding_4dp</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/text_background</item>
        <item name="android:padding">@dimen/padding_2dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <!--Overlay action bar (http://android.xsoftlab.net/training/basics/actionbar/overlaying.html)-->
        <item name="windowActionBarOverlay">true</item>
        <!--Remove shadow from action bar (https://stackoverflow.com/a/12246593/1463542)-->
        <item name="android:windowContentOverlay">@null</item>
    </style>
    

</resources>
