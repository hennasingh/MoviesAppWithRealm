<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.artist.web.popularmovies">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DetailMovieActivity"
            android:label="@string/app_header_detail"
            android:parentActivityName=".activity.MainActivity">
        </activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/settings_title"
            android:parentActivityName=".activity.MainActivity">
        </activity>
        <activity android:name=".activity.BaseActivity">
        </activity>

        <provider
            android:name=".database.MoviesContentProvider"
            android:authorities="com.artist.web.popularmovies"
            android:exported="false"/>

    </application>

</manifest>